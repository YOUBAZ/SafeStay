# ===================================
# SafeStay Environment Variables
# ===================================

# Environment
NODE_ENV=development

# Application URLs
WEB_URL=http://localhost:3000
OWNER_PORTAL_URL=http://localhost:3001
ADMIN_PANEL_URL=http://localhost:3002
API_URL=http://localhost:4000

# Database - PostgreSQL
DATABASE_URL="postgresql://safestay:safestay_dev_password@localhost:5432/safestay"

# Database - MongoDB
MONGODB_URI="mongodb://safestay:safestay_dev_password@localhost:27017/safestay_chat?authSource=admin"

# Database - Redis
REDIS_URL="redis://:safestay_dev_password@localhost:6379"

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Secret
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_FROM=noreply@safestay.com
EMAIL_FROM_NAME="SafeStay"
SENDGRID_API_KEY=your-sendgrid-api-key
# OR
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Service (Twilio or local Egyptian provider)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (AWS S3 or Cloudinary)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=safestay-uploads
AWS_REGION=eu-west-1

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateways
# PayMob (Egypt)
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_SECRET_KEY=your-paymob-secret-key
PAYMOB_INTEGRATION_ID=your-integration-id

# Stripe (International)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Socket.io
SOCKET_PORT=4001

# Admin
ADMIN_EMAIL=admin@safestay.com
ADMIN_PASSWORD=Change_This_In_Production_123!
